<div
  id="dog_request_<%= dog_request.id %>"
  class="w-full bg-white  border border-gray-400 bg-gray-200 rounded-lg shadow break-inside-avoid-column mb-5">
  <div class="p-5 text-center">
    <h5 class="text-xl font-semibold tracking-tight text-gray-900 "><%= dog_request.breed&.capitalize %></h5>
  </div>
  <div class="text-center p-5">
    <% if dog_request.error_message.present? %>
      <span class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded"> <%= dog_request.error_message %></span>
    <% else %>
      <% if dog_request.url.present? %>
        <img class="w-full aspect-square m-auto" src="<%= dog_request.url %>" />
      <% else %>
        <%= render '/dog_requests/spinner' %>
      <% end %>
    <% end %>
  </div>
</div>
